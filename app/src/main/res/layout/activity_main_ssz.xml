<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.huaxi.syndromeplatfrom.views.NoScrollViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/white"
        >

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/tab_home_unselect"
            app:iconSelected="@mipmap/tab_home_select"
            app:itemText="首页"
            app:textColorNormal="@color/color_gray_69"
            app:textColorSelected="@color/color_black"
            app:itemTextSize="8sp"
            />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/tab_circle_unselect"
            app:iconSelected="@mipmap/tab_circle_select"
            app:itemText="健康教育"
            app:textColorNormal="@color/color_gray_69"
            app:textColorSelected="@color/color_black"
            app:itemTextSize="8sp"
            />


        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/tab_mine_unselect"
            app:iconSelected="@mipmap/tab_mine_select"
            app:itemText="个人中心"
            app:textColorNormal="@color/color_gray_69"
            app:textColorSelected="@color/color_black"
            app:itemTextSize="8sp"
            />
    </com.chaychan.library.BottomBarLayout>

</LinearLayout>